.top-main__contens__content
  %h2.top-main__contens__title
    人気のブランド
  %ul.top-main__contens__lists
    = link_to do
      %li.menu__list
        ナイキ
    = link_to do    
      %li.menu__list
        シャネル
    = link_to do    
      %li.menu__list     
        シュプリーム
    = link_to do    
      %li.menu__list
        プーマ
.top-main__contens__category
  .top-main__contens__category__menu
    .category__item
      .category__item__top
        .category__item__top__title
          hige新着アイテム
        = link_to do
          %h2.category__item__top__refe
            もっと見る＞
      .category__item__bottom.fadein
        - @products.each do |product|
          .category__item__bottom__product
            - if product.buyer
              .category__item__bottom__product__sold-label
                %p SOLD
            = link_to product_path(product) do
              %span.category__item__bottom__product__price
                = "¥#{product.price.to_s(:delimited)}"
              .category__item__bottom__product__photo
                = image_tag(product.product_images[0].image.url, class: "image3" )     
              %h3.category__item__bottom__product__text
                = product.title