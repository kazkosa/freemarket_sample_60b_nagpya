-# ログインページ
=render "header"
-# メイン
%main.login__main
  .login__main__contents
    .login__main__contents__first
      %p.login__main__contents__first__text
        アカウントをお持ちではない方はこちら
      = link_to singup1_regulation_index_path, class: "login__main__contents__first__btn" do
        %p.login__main__contents__first__btn__text
          新規会員登録
    .login__main__contents__second
      = link_to root_path, class: "login__main__contents__second__face" do
        = icon("fab", "facebook icon fa-lg")
        %span.login__main__contents__second__face__text
          Facebookでログイン
      = link_to root_path, class: "login__main__contents__second__google" do
        = icon("fab", "google icon fa-lg")
        %span.login__main__contents__second__google__text
          Googleでログイン        
    .login__main__contents__third
      = alert
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " メールアドレス"
        .field
          = f.password_field :password, autocomplete: "off", placeholder: " パスワード"
        .robot
          .g-recaptcha{"data-callback" => "clearcall", "data-sitekey" => "6Le_wb8UAAAAAKnQTJ_7GU0oKNMcWC0VRYkPV9bQ"}
        .actions
          = f.submit "ログイン", class: 't_login', name: "btn-rog", disabled: "disabled"
        = link_to root_path, class: "owasure" do
          パスワードをお忘れの方    
=render "footer"
:javascript
  function clearcall(code) {
  	if(code !== ""){
  		$(':submit[name=btn-rog]').removeAttr("disabled");
  	}
  }     