-# ログインページ
-# ヘッダー
%header.login__header
  %h1.login__header__log
    = link_to root_path do
      %img{width: "185", src: "https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg"}            
-# メイン
%main.login__main
  .login__main__contents
    .login__main__contents__first
      %p.login__main__contents__first__text
        アカウントをお持ちではない方はこちら
      = link_to new_user_registration_path, class: "login__main__contents__first__btn" do
        %p.login__main__contents__first__btn__text
          新規会員登録
    .login__main__contents__second
      = link_to root_path, class: "login__main__contents__second__face" do

        = fa_icon 'facebook', class: 'icon fa-lg'
        %span.login__main__contents__second__face__text
          Facebookでログイン
      = link_to root_path, class: "login__main__contents__second__google" do
        = fa_icon 'google', class: 'icon fa-lg'
        %span.login__main__contents__second__google__text
          Googleでログイン
    .login__main__contents__third
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " メールアドレス"
        .field
          = f.password_field :password, autocomplete: "current-password", placeholder: " パスワード"
        .robot
          私はロボットじゃありません  
        .actions
          = link_to   do
            .form__mask
              %p.form__mask__text
                ログイン
              = f.submit class: 'hidden'
        = link_to root_path, class: "owasure" do
          パスワードをお忘れの方    
-# フッター             
%footer.login__footer
  %nav.login__footer__nav
    %ul.login__footer__nav__menu
      %li.login__footer__nav__menu__list
        = link_to do
          プライバシーポリシー
      %li.login__footer__nav__menu__list
        = link_to do
          メルカリ利用規約
      %li.login__footer__nav__menu__list
        = link_to do
          特定商取引に関する表記
  = link_to root_path, class: "login__footer__log" do
    %img{width: "80", src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2296184308"}  
  %p.login__footer__2019
    %small
      2019 Mercari  
