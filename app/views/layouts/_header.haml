.header
  .header__contents
    .header__contents__top
      .header__contents__top__log
        = link_to do 
          %img{:width => "134", :src => "https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg"}
      .form
        %input#box1{ :placeholder => "何かお探しですか？", :type => "text"}
        %button#button1{:type => 'submit'}
